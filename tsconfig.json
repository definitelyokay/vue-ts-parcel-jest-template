{
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": ".",
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": false,
		"lib": [
			"es2015",
			"dom"
		],
		"paths": {
			"~*": [
				"src/*"
			]
		},
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"plugins": [
			{
				"name": "typescript-tslint-plugin"
			}
		],
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "es6",
		"types": [
			"node",
			"jest"
		]
	},
	"include": [
		"src/**/*",
		"__tests__/**/*"
	],
	"exclude": [
		"node_modules"
	]
}